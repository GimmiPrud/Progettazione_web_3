{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [ 
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",             // modifico le dipendencies per poter utilizzare anche i file .jsx
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
]
}
